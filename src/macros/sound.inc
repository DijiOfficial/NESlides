.macro INIT_SOUND_ENGINE
    ldx #<music_data_untitled
    ldy #>music_data_untitled

    lda #0
    jsr famistudio_init
.endmacro

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
